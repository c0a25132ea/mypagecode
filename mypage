    <script>
        // vCard形式で連絡先情報を作成
        const vcard = `BEGIN:VCARD
VERSION:3.0
FN:杉本拓海
N:杉本;拓海;;;
ORG:東京工科大学;コンピュータサイエンス学科 先進情報専攻
TITLE:学部1年
EMAIL:eritotaku0802@gmail.com
URL:https://github.com/c0a25132ea
NOTE:AIに関する研究を行っています
END:VCARD`;

        // QRコードを生成
        new QRCode(document.getElementById("qrcode"), {
            text: vcard,
            width: 200,
            height: 200,
            colorDark: "#0f172a",
            colorLight: "#ffffff",
            correctLevel: QRCode.CorrectLevel.H
        });
